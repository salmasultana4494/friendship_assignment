<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorPrimaryDark</item>
	</style>

	<style name="TabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
		<item name="android:textSize">10sp</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="exampleCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
		<item name="colorControlActivated">@color/colorPrimary</item>
	</style>

	<style name="custom_spinner_style" parent="Widget.AppCompat.Light.DropDownItem.Spinner">

		<item name="android:paddingStart">4dp</item>
		<item name="android:paddingEnd">0dp</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="SpinnerDropdownItemStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:checkMark">@drawable/ic_arrow_drop_down</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:padding">16dp</item>
	</style>
</resources>